<Window x:Class="PageProject.View.Project_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageProject.View"
        xmlns:vm="clr-namespace:PageProject.VModel"
        xmlns:converter="clr-namespace:PageProject.Converter"
        mc:Ignorable="d"
        d:DataContext ="{d:DesignInstance vm:ProjectViewModel}"
        Title="Project_View" Height="450" Width="800">

    <Window.Resources>
        <converter:ScaleIconSizeConverter x:Key="SizeConverter"/>
    </Window.Resources>
    <Grid>
        <!--#0c6861-->
        <Border Background="#009186"/>
        <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
<!--_________________________ROUTER__________________________-->
        
            <Grid>
                <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" >
                <ItemsControl ItemsSource="{Binding Routers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="4" CornerRadius="30" Margin="4,6">
                                    <StackPanel >
                                        <TextBlock Text="{Binding Path=Name}" FontSize="22" HorizontalAlignment="Center" />
                                        <Image Source="\Images\router.png"  
                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=6.2}"
                                            Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=2.7}"  Margin="20,0" />
                                        
                                            <ItemsControl ItemsSource="{Binding Pin}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel >
                                                            <Image Source="\Images\pin.png" 
                                                       Width="{Binding ActualWidth, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=40.2}"
                                                       Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=2.7}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </ScrollViewer>
            </Grid >

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--________________________RESISTANCE_SENSOR________________-->
            <Border BorderBrush="Black" BorderThickness="4" Grid.Row="1" Grid.Column="1" CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="RESISTIVE PROBE" VerticalAlignment="Center" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="22"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                            <ComboBox  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,60" ItemsSource="{Binding Path=Sonde}" SelectionChanged="ComboBox_SelectionChanged"/>
                            <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,60" 
                                  ItemsSource="{Binding Path=SondaResistiva.ComunicationTypesCollection, Mode=OneWay}"/>
                    </Grid>
                </Grid>
            </Border>
            <!--________________________-->
            <Border BorderBrush="Black" BorderThickness="4" Grid.Row="1" Grid.Column="2" CornerRadius="20">
            <Grid >
                <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="MICROWAVE PROBE" VerticalAlignment="Center" HorizontalAlignment="Center"  FontWeight="Bold" FontSize="19"/>
                    <Grid Grid.Row="1">
                            <Border CornerRadius="20" Background="#0c6861">
                                <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0" PreviewKeyDown="TextBox_PreviewKeyDown" PreviewKeyUp="TextBox_PreviewKeyUp" FontSize="23" Style="{StaticResource TextBox_Microwave}" TextChanged="TextBox_TextChanged"/>
                            </Border>
                        </Grid>
            </Grid>
            </Border>
            
            <!--_________________________SCALE___________________________-->
        <Border BorderBrush="Black" BorderThickness="4" CornerRadius="20">
            <Grid Grid.Row="1" Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1" Text="SCALE" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="27"/>
                        <Rectangle Fill="Black" Grid.Column="2" RadiusX="20" RadiusY="20" />
                            <Menu Grid.Column="2" Style="{StaticResource Menu}" VerticalAlignment="Center" >
                                <MenuItem Margin="3,3,3,0" Style="{StaticResource MenuItem}">
                                    <MenuItem.Icon >
                                        <Image Source="/Images/plus.png"/>
                                    </MenuItem.Icon>
                                    <MenuItem Header="Aggregati" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                    <MenuItem Header="Cementi" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                    <MenuItem Header="Acqua" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                    <MenuItem Header="Additivi" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                    <MenuItem Header="Fibre" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                    <MenuItem Header="Ghiaccio" Click="Button_plus" Style="{StaticResource Menuitem}"/>
                                </MenuItem>
                            </Menu >
                            <Button  Grid.Column="2" Style="{StaticResource Button_Minus}" Click="Button_minus">
                                <Image Source="\Images\minus.png" Width="15"/>
                            </Button>
                            <Border Grid.Column="2" CornerRadius="20" Background="#0c6861" Width="30" Height="30" VerticalAlignment="Center" >
                                <TextBlock Text="{Binding Path=Count_Scale,UpdateSourceTrigger=PropertyChanged}" Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    
                            </Border>
                            
                        </Grid>
                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding Scales}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <StackPanel >
                                            <Border Background="{Binding Path=RectangleFill}"  
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=5.2}" 
                                                Height="{Binding ActualWidth, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=5.7}" CornerRadius="20"
                                                Margin="20,0,0,0"
                                                >
                                                    <Image 
                                                Source="\Images\scale.png" 
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=6.2}" Margin="10" 
                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid},Converter={StaticResource SizeConverter}, ConverterParameter=3.7}"                                               
                                            />
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                </Grid>
            </Border>
        </Grid>
        
<!--_________________________SAVE_____________________________-->
        <Grid Grid.Row="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Content="Save"  Style="{StaticResource Button_Save}">
                       
                    </Button>
                    <TextBlock Text="" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
        </Grid>
    </Grid>
</Window>
