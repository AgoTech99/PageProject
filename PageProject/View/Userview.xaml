    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="User" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"  Grid.Column="0"/>
        <TextBox Text="{Binding Path=User, Mode=OneWay}" IsReadOnly="True" Focusable="False" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Left"/>
       
        <TextBlock Text="Profile"  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"  Grid.Column="0"/>
        <TextBox Text="{Binding Path=Profile}"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Left" PreviewKeyUp="TextBox_PreviewKeyUp" PreviewKeyDown="TextBox_PreviewKeyUp" />

    </Grid>
